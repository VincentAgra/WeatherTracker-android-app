<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SemesterProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    // PRIMARY
    <style name="Theme.Custom.Primary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/carmine</item>
        <item name="colorPrimaryVariant">@color/auburn</item>
        <item name="colorOnPrimary">@color/redwood_1</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/redwood_1</item>
        <item name="colorSecondaryVariant">@color/redwood_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    // SECONDARY
    <style name="Theme.Custom.Secondary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/airSuperiorityBlue</item>
        <item name="colorPrimaryVariant">@color/airForceBlue</item>
        <item name="colorOnPrimary">@color/steelBlue_1</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/steelBlue_1</item>
        <item name="colorSecondaryVariant">@color/steelBlue_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>